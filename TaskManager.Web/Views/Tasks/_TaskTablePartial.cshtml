@model IEnumerable<TaskManager.Web.Models.TaskViewModel>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Título</th>
            <th>Categoría</th>
            <th>Step</th>
            <th>Completada</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var t in Model)
            {
                <tr>
                    <td>@t.Title</td>
                    <td>@t.CategoryName</td>
                    <td>@t.Step</td>
                    <td>@(t.IsCompleted ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-info">Ver</a>
                        <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Editar</a>

                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@t.Id" />
                            <button class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
