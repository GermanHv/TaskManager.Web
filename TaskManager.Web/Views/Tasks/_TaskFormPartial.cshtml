@model TaskManager.Web.Models.TaskFormViewModel

<div class="modal-header">
    <h5 class="modal-title">
        @(Model.Id == 0 ? "Crear tarea" : "Editar tarea")
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <form id="taskForm">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Título</label>
            <input name="Title" value="@Model.Title" class="form-control" />
            <span class="text-danger" data-valmsg-for="Title"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Categoría</label>
            <input name="CategoryId" value="@Model.CategoryId" type="number" class="form-control" />
            <span class="text-danger" data-valmsg-for="CategoryId"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Step</label>
            <input name="Step" value="@Model.Step" type="number" class="form-control" />
            <span class="text-danger" data-valmsg-for="Step"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="IsCompleted"
                   @(Model.IsCompleted ? "checked" : "") />
            <label class="form-check-label">Completada</label>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button id="btnSaveTask" class="btn btn-primary">
        Guardar
    </button>
</div>